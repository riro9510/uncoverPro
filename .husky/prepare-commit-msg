# .husky/commit-msg
#!/bin/sh
if [ -d .git/rebase-merge ] || [ -d .git/rebase-apply ] || [ -f .git/MERGE_HEAD ] || [ -f .git/CHERRY_PICK_HEAD ] || [ -f .git/REVERT_HEAD ]; then
  echo "ğŸ” Skipping commit-msg hook (merge/rebase/etc detected)."
  exit 0
fi
exec < /dev/tty && npx git-cz --hook || true
