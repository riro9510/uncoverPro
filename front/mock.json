{
  "sections": [
    {
      "sectionName": "Información Personal",
      "fields": [
        {
          "question": "Nombre Completo",
          "type": "input",
          "placeholder": "Ej: María González",
          "validation": {
            "regex": "^[a-zA-Z áéíóúÁÉÍÓÚñÑ]{2,50}$",
            "errorMessage": "Nombre inválido (2-50 caracteres)"
          },
          "required": true
        },
        {
          "question": "Título Profesional",
          "type": "input",
          "placeholder": "Ej: Desarrollador Frontend Senior",
          "required": true
        },
        {
          "question": "Email",
          "type": "input",
          "placeholder": "tu@email.com",
          "validation": {
            "regex": "^\\S+@\\S+\\.\\S+$",
            "errorMessage": "Email inválido"
          },
          "required": true
        },
        {
          "question": "Teléfono",
          "type": "input",
          "placeholder": "+52 55 1234 5678",
          "required": false
        },
         {
          "question": "Perfil de LinkedIn",
          "type": "input",
          "placeholder": "https://www.linkedin.com/in/tuusuario",
          "validation": {
            "regex": "^https:\\/\\/(www\\.)?linkedin\\.com\\/in\\/[^\\s\\/]+\\/?$",
            "errorMessage": "URL de LinkedIn inválida"
          },
          "required": false
        }
      ]
    },
    {
      "sectionName": "Resumen Profesional",
      "fields": [
        {
          "question": "Resumen (3-4 frases)",
          "type": "textarea",
          "placeholder": "Ej: Desarrollador con 5+ años de experiencia en React...",
          "maxLength": 250,
          "required": true
        }
      ]
    },
    {
      "sectionName": "Habilidades Principales",
      "fields": [
        {
          "question": "Selecciona 5-8 habilidades",
          "type": "multiselect-chips",
          "options": [
             "Teamwork",
            "Problem Solving",
            "Communication",
            "Project Management",
            "JavaScript",
            "Digital Marketing"
          ],
          "placeholder": "Selecciona o escribe tus habilidades",
          "allowCustom": true,
          "minSelections": 5,
          "maxSelections": 8,
          "required": true
        }
      ]
    },
    {
      "sectionName": "Experiencia Laboral",
      "repeatable": true,
      "maxRepeats": 3,
      "fields": [
        {
          "question": "Puesto",
          "type": "input",
          "placeholder": "Ej: Desarrollador Frontend",
          "required": true
        },
        {
          "question": "Empresa",
          "type": "input",
          "placeholder": "Nombre de la empresa",
          "required": true
        },
        {
          "question": "Periodo",
          "type": "daterange",
          "placeholder": "MM/AAAA - MM/AAAA",
          "validation": {
            "regex": "^(0[1-9]|1[0-2])/\\d{4} - (0[1-9]|1[0-2])/\\d{4}$",
            "errorMessage": "Formato: MM/AAAA - MM/AAAA"
          },
          "required": true
        },
        {
          "question": "Logros Principales",
          "type": "textarea",
          "placeholder": "- Lideré el desarrollo de...\n- Optimicé el rendimiento en...",
          "required": true
        }
      ]
    },
    {
      "sectionName": "Educación",
      "fields": [
        {
          "question": "Título/Certificación",
          "type": "input",
          "placeholder": "Ej: Lic. en Ciencias de la Computación",
          "required": true
        },
        {
          "question": "Institución",
          "type": "input",
          "placeholder": "Nombre de la universidad",
          "required": true
        },
        {
          "question": "Año de Graduación",
          "type": "year",
          "placeholder": "AAAA",
          "validation": {
            "regex": "^(19|20)\\d{2}$",
            "errorMessage": "Año inválido"
          },
          "required": true
        }
      ]
    },
    {
      "sectionName": "Personalización de Carta",
      "fields": [
        {
          "question": "Nombre de la Empresa Destino",
          "type": "input",
          "placeholder": "Ej: Google México",
          "required": false
        },
        {
          "question": "Puesto al que Aplicas",
          "type": "input",
          "placeholder": "Ej: Ingeniero de Software Senior",
          "required": true
        }
      ]
    },
    {
  "sectionName": "Idiomas",
  "fields": [
    {
      "question": "Idiomas y Nivel",
      "type": "multiselect-chips",
      "options": [
        "Español - Nativo",
        "Inglés - Avanzado",
        "Francés - Intermedio",
        "Alemán - Básico"
      ],
      "allowCustom": true,
      "maxSelections": 4,
      "required": false
    }
  ]
}

  ],
  "settings": {
    "allowSaveProgress": true,
    "maxCustomOptions": 5,
    "defaultTheme": "light",
    "maxOnePage": true,
    "highlightColor": "#FFECB3"
  }
}